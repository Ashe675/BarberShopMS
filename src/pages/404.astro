---
import Moustache from "../components/Icons/Moustache.astro";
---

<!doctype html>
<html lang="en" >
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/moustach.svg" />
    <title>Not Found</title>
  </head>
  <body class="h-screen flex justify-center items-center">
    <section class=" flex flex-col items-center p-8">
      <Moustache class="text-primary h-40 sm:h-56" />
      <h1 class=" text-white text-5xl font-bold text-center">404</h1>
      <h1 class=" text-white text-5xl font-bold text-center">Page Not Found!</h1>
      <a href="/" class=" text-yellow-500 text-2xl font-bold text-center mt-5 underline">Volver a inicio</a>
    </section>
  </body>
</html>

<style is:global>
  :root {
    --bg-gradient: linear-gradient(135deg, #220f00, #000);
  }
  html {
    font-family: "Roboto Slab", serif;
    background: var(--bg-gradient);
    scroll-behavior: smooth;
    background-repeat: no-repeat
  }
</style>
