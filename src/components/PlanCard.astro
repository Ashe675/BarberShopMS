---
import Button from './Button.astro';

interface Props {
  plan: string;
  price: string;
  description: string;
  modules: string[];
}

const { plan, price, description, modules } = Astro.props;
---

<div class="flex-1 flex flex-col justify-between bg-white text-secondary rounded-lg p-6">
  <h3 class="text-2xl font-bold mb-4">{plan}: {price}</h3>
  <p class="text-lg mb-4">{description}</p>
  <ul class="list-disc list-inside mb-6">
    {modules.map((module) => <li>{module}</li>)}
  </ul>
  <Button tag='Adquirir' link='#contact'/>
</div>
