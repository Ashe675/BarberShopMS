---
interface Props {
    title? : string;
    description? : string;
    className : string
}

const {title, description, className} = Astro.props
---


<section class={`text-center py-20 sm:mt-10 px-2 ${className}`}>
    <h1 class="text-3xl sm:text-4xl font-bold">{title}</h1>
    <p class="mt-4 text-lg text-white/80">{description}</p>
    <slot/>
</section>