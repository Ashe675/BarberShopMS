---
interface Props{
    pair : boolean
    title : string
    description : string
}

const {pair, title, description} = Astro.props
---

<div
  class={`p-6 shadow rounded hover:scale-105 text-center transition h-full ${pair ? "text-tertiary bg-primary" : "bg-tertiary"}`}
>
  <h3 class="text-2xl font-semibold">{title}</h3>
  <slot/>
  <p>{description}</p>
</div>
